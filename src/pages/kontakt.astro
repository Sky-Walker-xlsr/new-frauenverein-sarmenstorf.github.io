---
import Layout from "../layouts/layout.astro";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
---

<Layout
    title="Kontakt – Frauenverein Sarmenstorf"
    styleFile="/src/styles/kontakt.css"
>
    <Header />

    <main>
        <section class="kontakt section">
            <div class="container">
                <h1>Kontakt</h1>
                <p>
                    Kontaktiere uns bei Interesse, Fragen oder Ideen rund um den
                    Frauenverein Sarmenstorf. Wir freuen uns auf deine Nachricht
                    und melden uns so rasch wie möglich bei dir.
                </p>

                <a
                    class="button"
                    href="mailto:kontakt@frauenverein-sarmenstorf.ch"
                    >E-Mail senden</a
                >
            </div>
        </section>
    </main>

    <Footer />
</Layout>

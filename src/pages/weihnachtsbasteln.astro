---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
    title="Weihnachtsbasteln – Frauenverein Sarmenstorf"
    styleFile="/src/styles/weihnachtsbasteln.css"
>
    <Header />

    <main>
        <section class="ueber-uns">
            <div class="container text-center">
                <h1>Weihnachtsbasteln</h1>
                <p><strong>Samstag, 22. November 2025</strong></p>
                <p>
                    Von 9 bis 13 Uhr im Pfarreitreff – mit vielen kreativen
                    Ideen.<br />
                    Nach den Herbstferien folgen die Infos und werden die Muster
                    in der Bibliothek ausgestellt.
                </p>
                <p>Zuständig ist <strong>Conni Hubel</strong></p>
            </div>

            <div class="about-image">
                <img
                    src="/images/weihnachtsbasteln/logo-weihnachtsbasteln.png"
                    alt="Freizeitplausch Bild"
                />
            </div>
        </section>
    </main>

    <Footer />
</Layout>
